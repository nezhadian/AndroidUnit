<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp">

    <!-- Display for the result -->
    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text=""
        android:gravity="end"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text=""
        android:gravity="end"
        android:padding="8dp"
        android:textColor="@android:color/darker_gray" />

    <!-- Calculator buttons -->
    <GridLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnClear"
            android:text="C"
            android:layout_columnSpan="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btnDivide"
            android:text="รท"
            android:tag="/"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btnMultiply"
            android:text="ร"
            android:tag="*"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:tag="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:tag="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:tag="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btnSubtract"
            android:text="-"
            android:tag="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:tag="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:tag="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:tag="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            android:tag="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:tag="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:tag="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:tag="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btnEquals"
            android:text="="
            android:layout_rowSpan="2"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:tag="0"
            android:layout_columnSpan="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/btnDot"
            android:text="."
            android:tag="."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1" />
    </GridLayout>
</LinearLayout>